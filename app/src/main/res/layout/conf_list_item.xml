<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/confItem"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_people_black_24dp" />

        <TextView
            android:id="@+id/confListText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:lines="1"
            android:paddingTop="5dp"
            android:text="Nom confÃ©rence"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/getMap"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="7dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_location_on_black_24dp" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:enabled="false"
            android:src="@drawable/ic_person_add_black_24dp"
            android:text="S'inscrire"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <RatingBar
            android:id="@+id/ratingConf"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:numStars="5"

            android:rating="0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:paddingLeft="5dp"

            android:text="Commentaire(s) : " />


        <TextView
            android:id="@+id/numberComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonRating"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:enabled="false"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_person_add_black_24dp"
            android:text="Noter"
            android:textSize="10sp" />


    </LinearLayout>


</LinearLayout>